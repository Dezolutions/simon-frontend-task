
{% liquid

  assign product_price = product.price | money_without_trailing_zeros | split: ''
%}
<div class="featured-product" tabindex="0">
  {% if product.selected_or_first_available_variant.featured_image != null %}
    <img src="{{ product.selected_or_first_available_variant.featured_image | img_url: '400x' }}"
      sizes="(max-width: 600px) 400px,
              (max-width: 1024px) 600px,
              1024px"
      alt="{{ product.featured_image.alt }}"
      class="featured-product__img"
      />
  {% else %}
    <div class="aspect-square">{{ 'product-1' | placeholder_svg_tag }}</div>
  {% endif %}


  <div class="featured-product__info">
    <h3 class="featured-product__title">{{ product.title }}</h3>
    <p class="featured-product__price">
      {% if product.price < product.compare_at_price %}
        <span class="price__compare-item">{{ product.compare_at_price | money_without_trailing_zeros }}</span>
      {% endif %}
      <span class="price__item">{{ product_price[0] }}{{ product_price[1] }}</span>
    </p>
    <p class="featured-product__descr">{{ product.description }}</p>
    <div class="featured-product__divider"></div>
    {% comment %} {% if product.variants.size > 1 %}
      <div class="relative">
        <select
          name="options"
          class="featured-product-options"
        >
          {%- for variant in product.variants -%}
            {% if variant.available %}
              <option
                {% if variant == product.selected_or_first_available_variant %}
                  selected="selected"
                {% endif %}
                {% if variant.available == false %}
                  disabled
                {% endif %}
                value="{{ variant.price | money }}"
                data-variant-id="{{ variant.id }}"
                data-product-variant-img="{{ variant.featured_image | img_url: '600x' }}"
                data-variant-price="{{ variant.price | money }}"
              >
                {{ variant.title }}
              </option>
            {% endif %}
          {%- endfor -%}
        </select>

        <svg class="" width="19" height="10" viewBox="0 0 19 10" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1 1L9.5 8L18 1" stroke="#242323" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </div>
    {% endif %} {% endcomment %}
    <div class="featured-product__tags">
      {% for tag in product.tags %}
        <span class="featured-product__tag">{{ tag }}</span>
      {% endfor %}
    </div>
    <product-form>
      {%- form 'product',
        product,
        id: product_form_id,
        class: 'form',
        novalidate: 'novalidate',
        data-type: 'add-to-cart-form'
      -%}
        <input
          type="hidden"
          name="id"
          value="{{ product.selected_or_first_available_variant.id }}"
          disabled
        >
        <button
          id="{{ product_form_id }}-submit"
          type="submit"
          name="add"
          class="featured-product__quick-add-btn"
          aria-haspopup="dialog"
          aria-labelledby="{{ product_form_id }}-submit title-{{ section_id }}-{{ product.id }}"
          aria-live="polite"
          data-sold-out-message="true"
          {% if product.selected_or_first_available_variant.available == false %}
            disabled
          {% endif %}
        >
          <span class="quick-add-btn__text">
            {%- if product.selected_or_first_available_variant.available -%}
              {{ 'products.product.add_to_cart' | t }}
            {%- else -%}
              {{ 'products.product.sold_out' | t }}
            {%- endif -%}
          </span>
          <span class="sold-out-message hidden">
            {{ 'products.product.sold_out' | t }}
          </span>
          {%- if horizontal_quick_add -%}
            <span class="icon-wrap">{%- render 'base-svg-sprites', icon: 'icon-plus' -%}</span>
          {%- endif -%}
          <div class="loading-overlay__spinner hidden">
            <svg
              aria-hidden="true"
              focusable="false"
              class="spinner"
              viewBox="0 0 66 66"
              xmlns="http://www.w3.org/2000/svg"
            >
              <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
            </svg>
          </div>
        </button>
      {%- endform -%}
    </product-form>
  </div>
</div>