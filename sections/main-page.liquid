{{ 'section-main-page.bf.build.css' | asset_url | stylesheet_tag }}

<div class="page-width page-width--narrow sub-pages">
  <h1 class="main-page-title page-title h0">
    {{ page.title | escape }}
  </h1>
  <div class="rte">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.main-page.heading"
    }
  ]
}
{% endschema %}
