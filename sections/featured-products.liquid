<section
  class="featured-products-{{ section.id }}"
>
  {% if section.settings.title != blank %}
    <h2 class="featured-products__title">
      {{ section.settings.title }}
    </h2>
  {% endif %}

  <div class="featured-products__block">
    {% for product in section.settings.collection.products %}
      {% render 'featured-product', product: product %}
    {% endfor %}
  </div>
</section>

{% style %}
  .featured-products-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | divided_by: 2}}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }

  @media screen and (min-width:768px) {
    .featured-products-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

{% endstyle %}
{% schema %}
  {
    "name": "t:sections.featured_products.name",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.featured_products.name"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Section title"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "number_of_displayed_products",
        "min": 1,
        "max": 25,
        "step": 1,
        "label": "Number of displayed products",
        "default": 12
      },
      {
        "type": "select",
        "id": "products_per_row_desktop",
        "label": "Porducts per row on desktop",
        "options": [
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          }
        ],
        "default": "3",
      },
      {
        "type": "select",
        "id": "products_per_row_mobile",
        "label": "Porducts per row on mobile",
        "options": [
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "2",
            "label": "2"
          }
        ],
        "default": "1",
      },
      {
        "type": "header",
        "content": "Section padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding top",
        "default": 50,
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "default": 50,
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px"
      }
    ],
    "presets": [
      {
        "name": "Featured Products"
      }
    ]
  }
{% endschema %}
